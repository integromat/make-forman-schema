{
    "name": "@makehq/forman-schema",
    "version": "1.8.3",
    "description": "Forman Schema Tools",
    "license": "MIT",
    "author": "Make",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/integromat/make-forman-schema.git"
    },
    "homepage": "https://www.make.com",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.cts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "engines": {
        "node": ">=18"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "jest --coverage --runInBand --forceExit --verbose false",
        "build": "tsup",
        "build:version": "node scripts/build-version.mjs",
        "format": "npx prettier . --write",
        "publish:jsr": "npx jsr publish --allow-dirty",
        "lint": "tsc"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/json-schema": "^7.0.15",
        "@types/node": "^22.13.10",
        "jest": "^29.7.0",
        "json-schema": "^0.4.0",
        "prettier": "^3.5.3",
        "ts-jest": "^29.2.6",
        "ts-node": "^10.9.2",
        "tsup": "^8.4.0",
        "typescript": "^5.8.2"
    }
}
